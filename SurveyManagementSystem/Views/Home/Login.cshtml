
@{
    ViewData["Title"] = "User Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device" />
    <title>Login</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="loginbox">
        <img src="https://i.imgur.com/ZYzTdD0.png" class="avatar">
        <h1>Login Here</h1>
        <form method="post" action="#">
            <p>Username</p> <input type="text" name="" placeholder="Enter Username">
            <p>Password</p> <input type="password" name="" placeholder="Enter Password"> <input type="submit" name="" value="Login"> <a href="#">Lost your password?</a><br> <a asp-controller="Home" asp-action="Register">Don't have an account?</a><br /><a asp-controller="Home" asp-action="Index">Skip now</a>
        </form>
    </div>
</body>
</html>
